{
  "manifest_version": 3,
  "name": "Tone & Language Converter",
  "version": "1.0",
  "description": "Convert text to different tones of voice and languages using the Gemini API.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
